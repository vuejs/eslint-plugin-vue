{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start testing",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["run", "${file}", "--reporter=verbose"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start testing (watch)",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["${file}", "--reporter=verbose"],
      "console": "integratedTerminal"
    }
  ]
}